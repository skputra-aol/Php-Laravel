# preparing for linux/ubuntu
$ sudo apt install software-properties-common ca-certificates lsb-release apt-transport-https
$ LC_ALL=C.UTF-8 sudo add-apt-repository ppa:ondrej/php
$ sudo apt update
$ sudo apt install php8.0
$ sudo apt install php8.0-mysql php8.0-mbstring php8.0-xml php8.0-curl php8.0-gd
$ sudo update-alternatives --config php
$ sudo a2dismod php8.1
$ sudo systemctl restart apache2
$ sudo a2enmod php8.0 
$ sudo systemctl restart apache2

# Installing software
- Php 8.0
- Laravel 8.4
- Mysql
- Redis

# Install source
- change .env.example to .env
- run : composer install
- run : php artisan migrate --seed
- run : php artisan storage:link   /// if have upload file or img
- default user - password : admin@admin.com - password
